<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>


<body>
    <%- include('./partials/nav.ejs') %>

    <h1>Edit Item</h1>
    <form action="/items/<%=item._id%>?_method=PUT" method="POST">
        <!--  NOTE: the form is pre-populated with values for the server-->
        Title: <input type="text" name="title" value="<%=item.title%>" /><br />
        Description: <input type="text" name="description" value="<%=item.description%>" /><br />
        Urgent: <input type="checkbox" name="urgent" <% if(item.urgent
        === true){ %> checked <% } %> />
        <br />
        Date: <input type="text" name="dueDate" value="<%=item.dueDate%>"><br />
        <input type="submit" value="Submit Changes" />
    </form>

    <%- include('./partials/footer.ejs') %>
</body>

</html>